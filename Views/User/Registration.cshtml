@model User


<h1> Regisration User</h1>


<html>
<head>
    <title>

    </title>

    <style>
        .textbox {
            color: red;
        }
    </style>
</head>
<body>
    <form class="form-horizontal" asp-controller="User" asp-action="Registration" method="post">
        <div class="form-group">
            <label class="control-label col-sm-2" for="Name"  asp-for="Name">Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Name" placeholder="Enter Name" asp-for="Name">
                <span asp-validation-for="Name"  class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Gender" asp-for="Gender">Gender:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Gender" placeholder="Enter Gender"  asp-for="Gender">
                <span asp-validation-for="Gender"  class="text-danger" ></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="MobileNumber"  asp-for="MobileNumber">MobileNumber:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="MobileNumber" placeholder="Enter MobileNumber" asp-for="MobileNumber">
            <span asp-validation-for="MobileNumber"  class="text-danger" ></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</body>
</html>

